<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lg_app_splash"
        android:label="LibraryBuddy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile_app_development"
        tools:targetApi="31">
        <activity
            android:name=".modules.pages.AddPage"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".modules.pages.AboutUsPage"
            android:exported="true" />
        <activity
            android:name=".modules.pages.BookDetailsPage"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".modules.pages.BookPage"
            android:exported="false" />
        <activity
            android:name=".modules.pages.ProfilePage"
            android:exported="false" />
        <activity
            android:name=".modules.pages.SearchPage"
            android:exported="false" />
        <activity
            android:name=".modules.screens.HomeScreen"
            android:exported="false" />
        <activity
            android:name=".modules.screens.SignUpScreen"
            android:exported="false" />

        <activity
            android:name=".modules.screens.LoginScreen"
            android:exported="false" />

        <activity
            android:name=".modules.pages.UpdatePage"
            android:exported="false" />


        <activity android:name=".MainButtomNavigation"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>