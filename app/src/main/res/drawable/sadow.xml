<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- Shadow color -->
            <corners android:radius="4dp"/> <!-- Corner radius for shadow -->
        </shape>
    </item>
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background for the ImageView -->
            <corners android:radius="15dp"/>
        </shape>
    </item>
</layer-list>
